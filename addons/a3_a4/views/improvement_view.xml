<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="improvement_suggestion_view_form" model="ir.ui.view">
        <field name="name">improvement_suggestion.view.form</field>
        <field name="model">improvement.suggestion</field>
        <field name="arch" type="xml">
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                    <form>
                <header>
                    <button name="add" class="oe_highlight" string="Add" type="object" data-hotkey="a" states="draft" />
                    <button name="approve" string="Approve" type="object" data-hotkey="p" states="add" />
                    <button name="close" string="Close" type="object" data-hotkey="c" states="approve" />
                    <button name="draft" string="Reset to Draft" type="object" data-hotkey="r" states="close" />
                    <field name="state" widget="statusbar" nolabel="1" options="{'clickable':'1'}" statusbar_visible="draft,add,approve,close" />       
                </header>
                <sheet>
                    <h1 class="w-auto mb-2 fw-bold bg-primary text-white text-center">
                        IMPROVEMENT SUGGESTION FORM
                    </h1>                
                    <group>
                        <field name="issue_date" />
                        <field name="proposed_id" />
                        <field name="proposed_email" />
                        <field name="job_title" />
                        <field name="div_bu_br" />
                        <field name="dept_name" />
                        <field name="name" readonly="1"/>
                        <field name="facilitor_id" />
                        <field name="facilitor_email" />
                        <field name="dh_id" />
                        <field name="dh_email" />
                    </group>
                    <div class="w-auto mb-2">
                        <h4 class="fw-bold bg-primary text-white">A. IMPROVEMENT THEME</h4>
                        <field name="improvement_theme" nolabel="1" />
                    
                        <h4 class="fw-bold bg-primary text-white">B. CURRENT CONDITION ANALYZE</h4>
                        <field name="cur_con_analyze" nolabel="1"/>
                   
                        <h4 class="fw-bold bg-primary text-white">C. IMPROVEMENT SUGGESTION</h4>
                        <field name="improvement_suggestion" nolabel="1" />
                    </div>
                    
                    <h4 class="w-auto mb-2 fw-bold bg-primary text-white">D. IMPROVEMENT SUGGESTION OBJECTIVE</h4>
                    <div class="row">
                        <div class="col">
                            <h4>SQCDM</h4>
                            <ul class="list-inline"> 
                                <li>                                        
                                    <field name="safety_healthy" />
                                    <b>Safety/Healthy</b>
                                </li>
                                <li>
                                    <field name="quality" />
                                    <b>Quality (next process/customer satisfaction)</b>
                                </li>
                                <li>
                                    <field name="cost_budget" />
                                    <b>Cost Budget</b>
                                </li>
                                <li>
                                    <field name="delivery" />
                                    <b>Delivery (next process/customer send on time)</b>
                                </li>
                                <li>
                                    <field name="morality" />
                                    <b>Morality/Good Habit</b>
                                </li>
                            </ul>                                
                        </div>
                        <div class="col">
                            <h4>4M+EI</h4>
                            <ul class="list-inline">
                                <li>                                        
                                    <field name="man_people" />
                                    <b>Man/People</b>
                                </li>
                                <li>
                                    <field name="machine" />
                                    <b>Machine/Equipment/Tools</b>
                                </li>
                                <li>
                                    <field name="method" />
                                    <b>Method/Process(SOP)</b>
                                </li>
                                <li>
                                    <field name="material" />
                                    <b>Material/Parts</b>
                                </li>
                                <li>
                                    <field name="environment" />
                                    <b>Envirenment</b>
                                </li>
                                    <li>
                                    <field name="information" />
                                    <b>Information</b>
                                </li>
                            </ul>                   
                        </div>
                        <div class="col">
                            <h4>5S</h4>
                            <ul class="list-inline">
                                <li>                                        
                                    <field name="sort" />
                                    <b>Sort (Separating needed and unneeded)</b>
                                </li>
                                <li>
                                    <field name="set_in_order" />
                                    <b>Set in Order (Keep well and easy to retrieval) </b>
                                </li>
                                <li>
                                    <field name="shine" />
                                    <b>Shine (Neat and Clean)</b>
                                </li>
                                <li>
                                        <field name="standardize" />
                                    <b>standardize (Standard for 3S above)</b>
                                </li>
                                <li>
                                    <field name="sustain" />
                                    <b>Sustain (Do it and maintain with discipline)</b>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <h4 class="w-auto mb-2 fw-bold bg-primary text-white">E. IMPROVEMENT SCOPE</h4>
                    <div>
                        <field name="improvement_scope" widget="radio" options="{'horizontal': true}" nolabel="1" />
                    </div>
                    <h4 class="fw-bold bg-primary text-white">F. VISUAL CONDITION</h4>
                    <group>
                        <group>
                            <field name="before" widget="image" />
                        </group>
                        <group>
                            <field name="after" widget="image" />
                        </group>
                    </group>

                    <h4 class="w-auto mb-2 fw-bold bg-primary text-white">G. DELIVERABLES</h4>
                    <div> <field name="deliverables" nolabel="1" /> </div>

                    <h4 class="w-auto mb-2 fw-bold bg-primary text-white">H. NEXT IMPROVEMENT PLAN</h4>
                    <field name="next_improve_plan" nolabel="1" />

                    <group>
                        <field name="create_id" />
                        <field name="create_date" />
                    </group>                     
                </sheet>
            </form>
        </field>
    </record>
    <record id="improvement_suggestion_view_tree" model="ir.ui.view">
        <field name="name">improvement_suggestion.view.tree</field>
        <field name="model">improvement.suggestion</field>
        <field name="arch" type="xml">
            <tree string="">                
                <field name="name" />
                <field name="issue_date" />
                <field name="proposed_id" />
                <field name="proposed_email" />
                <field name="job_title" />
                <field name="div_bu_br" />
                <field name="dept_name" />
                <field name="facilitor_id" />
                <field name="facilitor_email" />
                <field name="dh_id" />
                <field name="dh_email" />
                <field name="improvement_theme" />
                <field name="cur_con_analyze" />
                <field name="improvement_suggestion" />
                <field name="safety_healthy" />
                <field name="quality" />
                <field name="cost_budget" />
                <field name="delivery" />
                <field name="morality" />
                <field name="man_people" />
                <field name="machine" />
                <field name="method" />
                <field name="material" />
                <field name="environment" />
                <field name="information" />
                <field name="sort" />
                <field name="set_in_order" />
                <field name="shine" />
                <field name="standardize" />
                <field name="sustain" />
                <field name="improvement_scope" />
                <field name="deliverables" />
                <field name="next_improve_plan" />
                <field name="create_id" />
                <field name="create_date" />
                <field name="state" />
            </tree>
        </field>
    </record>

    <record id="improvement_suggestion_action" model="ir.actions.act_window">
        <field name="name">Improvement Suggestions</field>
        <field name="res_model">improvement.suggestion</field>
        <field name="view_mode">tree,form</field>
        <!-- <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            
        </field> -->
    </record>
    <menuitem
        id="improvement_suggestion_root_menu"
        name="Improvement Suggestion"
        sequence="10"/>
    <menuitem
        id="improvement_suggestion_sub_menu"
        name="Improvement Suggestion"
        action="improvement_suggestion_action"
        parent="improvement_suggestion_root_menu"
        sequence="10"/>

</odoo>
