<?xml version="1.0" encoding="utf-8"?>
<odoo>
     <data noupdate="1">
       <record id="mail_act_borrow_approval" model="mail.activity.type">
            <field name="name">Borrow Request Approval</field>
            <field name="icon">fa-dollar</field>
            <field name="res_model">borrow.request</field>

        </record>
        <record id="mail_act_borrow_return_approval" model="mail.activity.type">
            <field name="name">Borrow Return</field>
            <field name="icon">fa-dollar</field>
            <field name="res_model">borrow.request</field>

          
        </record>
        <template id="borrow_template_refuse_reason">
            <p>Your Borrow Request <t t-esc="name"/> has been refused</p>
            <ul class="o_timeline_tracking_value_list">
                <li>Reason : <t t-esc="reason"/></li>
            </ul>
        </template>
    </data>
</odoo>

