<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="borrow_refuse_wizard_view_form" model="ir.ui.view">
        <field name="name">borrow.refuse.wizard.form</field>
        <field name="model">borrow.refuse.wizard</field>
        <field name="arch" type="xml">
            <form string="Borrow request refuse reason">
                <separator string="Reason to refuse Borrow Request"/>
                <field name="request_ids" invisible="1"/>
                <field name="reason"/>
                <footer>
                    <button string='Refuse' name="borrow_refuse_reason" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="borrow_refuse_wizard_action" model="ir.actions.act_window">
        <field name="name">Refuse Borrow Request</field>
        <field name="res_model">borrow.refuse.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="borrow_refuse_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
