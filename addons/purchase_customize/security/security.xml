<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <!-- BU Record -->
        <record id="manage_bu_order" model="ir.rule">
            <field name="name">Manage BU Purchase Order</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="domain_force">[('hr_bu_id', '=',user.current_bu_br_id.id)]</field>
            <field name="groups" eval="[(4, ref('master_data_extension.group_bu_user'))]"/>
        </record>
        <!-- CFD Record -->
        <record id="manage_cfd_order" model="ir.rule">
            <field name="name">Manage CFD Purchase Order</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('master_data_extension.group_cfd_user'))]"/>
        </record>
        
        
    </data>
</odoo>