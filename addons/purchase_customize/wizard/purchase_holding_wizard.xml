<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="po_hold_wizard_view_form" model="ir.ui.view">
        <field name="name">purchase.hold.wizard.form</field>
        <field name="model">po.holding.wizard</field>
        <field name="arch" type="xml">
            <form string="Purchase Holding Reason">
                <separator string="Reason to Hold Purchase Order"/>
                <field name="request_ids" invisible="1"/>
                <field name="reason"/>
                <footer>
                    <button string='Hold' name="hold_reason" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="po_hold_wizard_action" model="ir.actions.act_window">
        <field name="name">Purchase Hold Reason</field>
        <field name="res_model">po.holding.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="po_hold_wizard_view_form"/>
        <field name="target">new</field>
    </record>
</odoo>
