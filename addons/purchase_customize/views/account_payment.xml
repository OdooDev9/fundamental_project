    <record id="inherit_view_account_payment_form" model="ir.ui.view">
		<field name="name">account.payment.form</field>
		<field name="model">account.payment</field>
		<field name="inherit_id" ref="account.view_account_payment_form" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='ref']" position="after">
				<field name="is_oversea_purchase" attrs="{'invisible': [('payment_type','not in','outbound')]}" />
			</xpath>
			<xpath expr="//button[@name='action_post']" position="after">
			
				<button name="action_approve_finance_head" string="Approve By F &amp; A Head" class="oe_highlight" type="object" groups="product_configure.group_finance_account_head" data-hotkey="v" attrs="{'invisible': ['|','|','|',('state', '!=', 'draft'),('unit_or_part','!=','unit'),('is_oversea_purchase','=',True),('payment_type','not in','outbound')]}" />
				<button name="action_approve_finance_head" string="Approve By F &amp; A Head" class="oe_highlight" type="object" data-hotkey="v" attrs="{'invisible': ['|','|','|',('state', '!=', 'draft'),('unit_or_part','!=','unit'),('is_oversea_purchase','=',False),('payment_type','not in','outbound')]}" groups='product_configure.group_finance_account_head'/>
				<button name="action_approve_corp_pic" string="Approve By Corp. AP PIC" class="oe_highlight" type="object" data-hotkey="v" attrs="{'invisible': ['|','|','|',('state', '!=', 'approved_finance_head'),('unit_or_part','!=','unit'),('is_oversea_purchase','=',False),('payment_type','not in','outbound')]}" groups='purchase_customize.group_ap_pic'/>
				<button name="action_approve_corp_head" string="Approve By Corp. AP Head" class="oe_highlight" type="object" data-hotkey="v" attrs="{'invisible': ['|','|','|',('state', '!=', 'approved_corp_ap_pic'),('unit_or_part','!=','unit'),('is_oversea_purchase','=',False),('payment_type','not in','outbound')]}" groups='purchase_customize.group_ap_head'/>
				<button name="action_approve_corp_gm_agm" string="Approve By Corp. AP GM/AGM" class="oe_highlight" type="object" data-hotkey="v" attrs="{'invisible': ['|','|','|',('state', '!=', 'approved_corp_ap_head'),('unit_or_part','!=','unit'),('is_oversea_purchase','=',False),('payment_type','not in','outbound')]}" groups='purchase_customize.group_ap_gm_agm'/>
			</xpath>

			<xpath expr="//button[@name='action_post']" position="replace">
				<button name="action_post" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('state', '!=', 'approved_finance_head'),('is_oversea_purchase','=',True),('payment_type','not in','outbound')]}" data-hotkey="v" />
				<button name="action_post" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('state', '!=', 'approved_corp_ap_gm_agm'),('is_oversea_purchase','=',False),('payment_type','not in','outbound')]}" data-hotkey="v" />
				<button name="action_post" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('state', '!=', 'draft'),('unit_or_part','!=','part'),('payment_type','not in','outbound')]}" data-hotkey="v" />
			
			</xpath>
			
         
            </field>
        </record>
</odoo>
