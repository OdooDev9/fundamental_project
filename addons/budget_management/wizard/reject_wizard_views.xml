<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="budget_reject_form" model="ir.ui.view">
        <field name="name">budget.reject.form</field>
        <field name="model">budget.reject</field>
        <field name="arch" type="xml">
            <form string="">
                <group>
                    <group>
                        <field name="reject_user_id" options="{'no_create': True,'no_open': True}" readonly="1"/>
                        <field name="origin_rec_id" invisible="1" options="{'no_create': True,'no_open': True}"/>
                        <field name="model_name" invisible="1"/>
                    </group>
                    <group>
                    </group>
                    <label for="reject_reason" string="Reason"/>
                    <field name="reject_reason"/>
                </group>
                <footer>
                    <button string='Reject' name="action_process" type="object" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
           </form>
        </field>
    </record>

    <record id="action_budget_reject_process" model="ir.actions.act_window">
        <field name="name"></field>
        <field name="res_model">budget.reject</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="budget_reject_form"/>
        <field name="target">new</field>
    </record>
</odoo>
