    <record id="manage_monthly_budget" model="ir.rule">
        <field name="name">Manage BU/BR/DIV Monthly Budget Management</field>
        <field name="model_id" ref="model_monthly_budget_request"/>
        <field name="domain_force">[('business_id','=',user.current_bu_br_id.id)]</field>
        <field name="groups" eval="[(4, ref('master_data_extension.group_bu_user')),(4, ref('master_data_extension.group_br_user')),(4,ref('master_data_extension.group_hr_div_user'))]"/>
