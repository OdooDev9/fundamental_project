<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_filter_quot_no_inherit" model="ir.ui.view">
        <field name="name">purchase.list.select.quot.no.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="//search" position='inside'>
                <field name="purchase_id" string="Purchase Quotation No"/>
                <filter string="Purchase Quotation No" context="{'group_by':'purchase_id'}"
                        name="purchase_id"/>
            </xpath>

        </field>
    </record>

    <record id="view_purchase_order_inherit_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position='before'>
                <field name="purchase_id" readonly="1" string="Purchase Quotation No"/>

            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <!-- YZO add options attribute-->
                <attribute name="options">{'no_create':True}</attribute>
                <attribute name="domain">[('supplier', '=', True)]</attribute>
                <attribute name="context">{'default_supplier':1, 'default_customer':0}
                </attribute>
            </xpath>
        </field>
    </record>

    <record id="oversea_po_inherit_form" model="ir.ui.view">
        <field name="name">purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase_customize.oversea_purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_status']" position='before'>
                <field name="purchase_id" readonly="1" string="Purchase Quotation No"/>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <!-- YZO Update domain and add options attribute-->
                <attribute name="options">{'no_create':True}</attribute>
                <attribute name="domain">[('oversea_supplier', '=', True)]</attribute>
                <attribute name="context">{'default_supplier':1, 'default_customer':0}
                </attribute>
            </xpath>
        </field>
    </record>


</odoo>
