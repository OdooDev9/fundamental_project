<odoo>
    <record id="product_template_form_view_inherited" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <field name="categ_id" position="before">
                <field name="business_id" required="0" options="{'no_create': True}"
                       attrs="{'required':[('detailed_type','=','product')]}"/>
                <field name="branch_id" options="{'no_create': True}"
                       attrs="{'invisible':[('detailed_type','!=','service')]}"/>
                <field name="unit_or_part" readonly="0" force_save="1"
                       attrs="{'invisible':[('detailed_type','=','service')],'required':[('detailed_type','=','product')]}"/>
                <field name="stock"/>
            </field>
        </field>
    </record>
</odoo>