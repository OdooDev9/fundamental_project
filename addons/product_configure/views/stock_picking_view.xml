<odoo>
<data>
	<record id="view_picking_form_hr_bu/br_inherit" model="ir.ui.view">
	    <field name="name">stock.picking.form</field>
	    <field name="model">stock.picking</field>
	    <field name="inherit_id" ref="stock.view_picking_form"/>
	    <field name="arch" type="xml">
	        	<field name="origin" position="after">
                	<field name="hr_bu_id"
	        			options="{'no_create_edit': True}"/>
					<field name="unit_or_part"/>
	        	</field>
                <field name="product_uom" position='after'>
                <field name="hr_bu_id" invisible="1" />
                </field>
				<xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position='attributes'>
                    <attribute name="options">{'no_create': True}</attribute>
                </xpath>
	    </field>
	</record>
</data>
</odoo>
