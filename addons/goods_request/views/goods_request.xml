<?xml version="1.0" ?>
<odoo>
    <data>
         <record id="action_view_delivery" model="ir.actions.act_window">
            <field name="name">Stock Picking</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">stock.picking</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('request_ref_id','=',active_id)]</field>
        </record>

        <record id="view_sale_order_request_tree" model="ir.ui.view">
            <field name="name">sale.order.request.tree</field>
            <field name="model">sale.order.request</field>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <tree string="Goods Request">
                    <field name="name"/>
                    <field name="quote_name"/>
                    <field name="request_date"/>
                    <field name="hr_bu_id"/>
                    <field name="hr_br_id"/>
                    <field name="create_uid" string="Request Person"/>
                    <field name="state"/>

                </tree>
            </field>
        </record>

        <record id="view_sale_order_request_form" model="ir.ui.view">
            <field name="name">sale.order.request.form</field>
            <field name="model">sale.order.request</field>
            <field eval="12" name="priority"/>
            <field name="arch" type="xml">
                <form string="Goods Request">
                    <header>
                        <!-- YZO add confirm button and update BOH button-->
                        <field name="br_user_approve" invisible="1"></field>
                        <field name="bu_user_approve" invisible="1"></field>
                        <button name="button_approve" type="object" attrs="{'invisible': ['|',('bu_user_approve','=',True),'|',('br_user_approve', '=', False),('state','!=','new')]}" string="Approve By BOH" class="oe_highlight" groups='product_configure.group_boh' />

                        <button name="button_confirm" type="object" attrs="{'invisible': ['|',('bu_user_approve','=',False),'|',('br_user_approve', '=', True),('state','!=','new')]}" string="Confirm" class="oe_highlight" />
                        <!-- YZO update statusbar_visible of state-->
                        <field name="state" widget="statusbar" statusbar_visible="new"
                               statusbar_colors="{&quot;approved&quot;:&quot;blue&quot;}"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button type="action" name="%(action_view_delivery)d"
                                    class="oe_stat_button" icon="fa-truck"
                                    attrs="{'invisible': [('delivery_count', '=', 0)]}" groups="base.group_user">
                                <field name="delivery_count" widget="statinfo" string="Delivery"/>
                            </button>

                        </div>

                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                        <group>
                            <group>
                                <field name="quote_name" options="{'no_create': True}" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                                <field name="request_date" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                                <field name="request_user_id" string="Request Person" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                            </group>
                            <group>
                                <field name="hr_br_id" required="True" options="{'no_create': True}" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                                <field name="hr_bu_id" required="True" options="{'no_create': True}" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                                <field name="unit_or_part" required="True" attrs="{'readonly': [ ('state', 'not in', ['new'])]}"/>
                            </group>


                        </group>
                        <notebook>
                            <page string="Goods Request Lines">

                                <field name="custom_order_line" nolabel= "1" attrs="{'readonly': [ ('state', 'not in', ['new'])]}">
                                    <tree editable="bottom">
                                        <field name="product_id" options="{'no_create': True}"/>
                                        <field name="product_uom_qty"/>
                                        <field name="product_uom_category_id" invisible="1"/>
                                        <field name="product_uom" options="{'no_create': True}"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers" />
                        <field name="message_ids" widget="mail_thread" />
                    </div>
                </form>

            </field>
        </record>

        <record id="action_sale_order_request" model="ir.actions.act_window">
            <field name="name">Goods Request</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order.request</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="view_id" ref="view_sale_order_request_tree" />
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">
                    Create a Goods Request.
                </p>
            </field>
        </record>
        <menuitem name="Goods Request" id="menu_request" parent="sale.sale_menu_root" sequence="5" />

        <menuitem name="Goods Request" id="menu_request_orders"
            parent="menu_request" action="goods_request.action_sale_order_request" sequence="11" />

        <menuitem name="Goods Request" id="menu_request_stock" parent="stock.menu_stock_root" sequence="3"/>
        <menuitem name="Goods Request" id="menu_request_order_stock" parent="menu_request_stock"
            action="goods_request.action_sale_order_request" sequence="11"/>
    </data>
</odoo>
