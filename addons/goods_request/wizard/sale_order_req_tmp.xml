<odoo>
    <data>

         <record id="action_quotes_form_request" model="ir.actions.act_window">
            <field name="name">Good Transfer Request</field>
            <field name="res_model">sale.order.request.temp</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="wizard_split_quotes_form_extended" model="ir.ui.view">
            <field name="name">wizard.split.quotes.form.extended</field>
            <field name="model">sale.order.request.temp</field>
            <field name="arch" type="xml">
                <form string="Split Quotations">
                    <group>
                        <group>
                            <field name="quote_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="request_date"/>
                            <field name="hr_br_id" string="Branch" options="{'no_create': True}"/>
                            <field name="hr_bu_id" string=" Business Unit" options="{'no_create': True}"/>
                            <field name="unit_or_part" readonly='1'/>
                        </group>
                    </group>
                    <group>

                        <field name="custom_order_line" nolabel="1">
                                <tree create="false" editable="bottom">
                                    <field name="sale_order_line" invisible="1"/>
                                    <field name="product_id" readonly="1"/>
                                    <field name="product_uom_qty"/>
                                    <field name="product_uom" readonly="1"/>
                                </tree>
                        </field>
                    </group>
                    <footer>
                        <button type="object" name="split_quotes" string="Request" class="oe_highlight"/> Or
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>