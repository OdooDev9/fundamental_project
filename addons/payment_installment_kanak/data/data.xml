<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="ir_cron_installment_reminder" model="ir.cron">
        <field name="name">Installment Reminder</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_reminder()</field>
        <field name="user_id" ref="base.user_root" />
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>

    <record id="installment_fine_calculator" model="ir.cron">
        <field name="name">Installment Fine Calculator</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">minutes</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="True"/>
    </record>

    <record id="installment_fine_calculator_tester" model="ir.cron">
        <field name="name">Installment Fine Calculator Tester For OverDue</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator_tester()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>


    <record id="installment_fine_calculator_tester_follow_up" model="ir.cron">
        <field name="name">Installment Fine Calculator Tester For Follow Up</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator_tester_follow_up()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>


    <record id="installment_fine_calculator_tester_remind" model="ir.cron">
        <field name="name">Installment Fine Calculator Tester For Remind</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator_tester_remind()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>


    <record id="installment_fine_calculator_tester_need_action" model="ir.cron">
        <field name="name">Installment Fine Calculator Tester For Need Action</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator_tester_need_action()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>


    <record id="installment_fine_calculator_tester_take_action" model="ir.cron">
        <field name="name">Installment Fine Calculator Tester For Take Action</field>
        <field name="model_id" ref="model_invoice_installment_line"/>
        <field name="state">code</field>
        <field name="code">model.installment_fine_calculator_tester_take_action()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="active" eval="False"/>
    </record>

