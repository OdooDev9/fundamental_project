<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="quotation_modify_installment_view_form" model="ir.ui.view">
        <field name="name">quotation_modify_installment_view_form</field>
        <field name="model">request.quotation.modify.installment</field>
        <field name="arch" type="xml">
            <form string="Installment Plan">
                <div class="oe_title">
                    <h1>
                        <field name="name"/>
                    </h1>
                </div>
                <group>
                    <group>

                        <label for="tenure"/>
                        <div class="o_row" name="Tenure">
                            <field name="tenure" class="oe_inline"/>
                            <field name="tenure_type" nolabel="1" class="oe_inline" style="margin-left:5px"/>
                        </div>
                        <field name="quotation_id" invisible="1"/>
                        <field name="down_payment_type"/>
                        <field name="down_payment_percent" attrs="{'invisible':[('down_payment_type','=','fix')]}"/>
                        <field name="down_payment_fixed" attrs="{'invisible':[('down_payment_type','=','percent')]}"/>
                        <field name="interest_rate"/>
                        <field name="interest_start_from"/>
                        <field name="payment_circle_count"/>
                        <field name="fine_rate"/>
                        <label for="fine_threshold"/>
                        <div class="o_row" name="fine_threshold">
                            <field name="fine_threshold" nolabel="1"/>
                            <span>Days</span>
                        </div>
                    </group>
                </group>
                <footer>
                    <button name="modify" string="Modify" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="quotation_modify_installment_action" model="ir.actions.act_window">
        <field name="name">request.quotation.modify.installment.wizard</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">request.quotation.modify.installment</field>
        <field name="view_mode">form</field>
    </record>
</odoo>