<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Modify Sale Order -->
    <record model="ir.ui.view" id="modify_installment_form">
        <field name="name">wizard.installment.modify.form</field>
        <field name="model">modify.installment</field>
        <field name="arch" type="xml">
            <form string="Installment Plan">
				<div class="oe_title">
					<h1>
						<field name="name" />
					</h1>
				</div>
				<group>
					<group>

						<label for="tenure"/>
						<div class="o_row" name="Tenure">
							<field name="tenure" class="oe_inline"/>
							<field name="tenure_type" nolabel="1" class="oe_inline" style="margin-left:5px" />
						</div>
						<field name="order_id" invisible="1"/>
						<field name="down_payment_type" />
						<field name="down_payment_percent" attrs="{'invisible':[('down_payment_type','=','fix')]}"/>
						<field name="down_payment_fixed" attrs="{'invisible':[('down_payment_type','=','percent')]}"/>
						<field name="interest_rate" />
						<field name="interest_start_from" />
						<field name="payment_circle_count" />
						<field name="fine_rate" />
						<label for="fine_threshold" />
						<div class="o_row" name="fine_threshold">
							<field name="fine_threshold" nolabel="1"/>
							<span>Days</span>
						</div>
					</group>
				</group>
				<footer>
					<button name="modify" string="Modify" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
        </field>
    </record>
	<!-- Modify Re-Contract -->
	<record model="ir.ui.view" id="modify_reinstallment_form">
        <field name="name">wizard.installment.modify.form</field>
        <field name="model">modify.installment</field>
        <field name="arch" type="xml">
            <form string="Installment Plan">
				<div class="oe_title">
					<h1>
						<field name="name" />
					</h1>
				</div>
				<group>
					<group>

						<label for="tenure"/>
						<div class="o_row" name="Tenure">
							<field name="tenure" class="oe_inline"/>
							<field name="tenure_type" nolabel="1" class="oe_inline" style="margin-left:5px" />
						</div>
						<field name="re_contract_id" />
						<field name="order_id" invisible="1"/>
						<field name="down_payment_type" />
						<field name="down_payment_percent" attrs="{'invisible':[('down_payment_type','=','fix')]}"/>
						<field name="down_payment_fixed" attrs="{'invisible':[('down_payment_type','=','percent')]}"/>
						<field name="interest_rate" />
						<field name="interest_start_from" />
						<field name="payment_circle_count" />
						<field name="fine_rate" />
						<label for="fine_threshold" />
						<div class="o_row" name="fine_threshold">
							<field name="fine_threshold" nolabel="1"/>
							<span>Days</span>
						</div>
					</group>
				</group>
				<footer>
					<button name="recontract_modify" string="Modify" type="object" class="btn-primary"/>
					<button string="Cancel" class="btn-secondary" special="cancel"/>
				</footer>
			</form>
        </field>
    </record>
</odoo>
