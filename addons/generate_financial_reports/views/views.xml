<odoo>
  <data>

    <record id="action_account_financial_report_line_tree" model="ir.actions.act_window">
        <field name="name">Financial Report Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">account.financial.html.report.line</field>
        <field name="view_mode">tree,form</field>
        <field name="context"></field>
        <!-- <field name="view_id" ref="view_account_financial_report_tree"/> -->
    </record>
    <menuitem id="menu_account_financial_reports_line_tree" name="Financial Report Lines" sequence="7" parent="account.account_management_menu" action="action_account_financial_report_line_tree" groups="base.group_no_one"/>
    <record id="business_unit_form_add_pnl_report_action" model="ir.ui.view">
      <field name="name">business unit form</field>
      <field name="model">business.unit</field>
      <field name="inherit_id" ref="master_data_extension.business_unit_form" />
      <field name="arch" type="xml">
        <xpath expr="//page[@name='journals']" position="after">
          <page name="account_reports" string="Reports" groups="base.group_no_one">
            <button string="Generate Generic Statement Reports" name="generate_generic_statement_reports" type="object" class="oe_highlight"/><br/><br/>
            <button string="PNL report" name="generate_pnl_report" type="object" class="oe_highlight"/><br/><br/>
            <button string="Balance Sheet report" name="generate_balance_sheet_report" type="object" class="oe_highlight"/><br/><br/>
            <button string="Executive Summary report" name="generate_executive_summary_report" type="object" class="oe_highlight"/>
          </page>          
        </xpath>
      </field>
    </record>
  </data>
</odoo>