<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="candidate_record_view_search" model="ir.ui.view">
        <field name="name">candidate_record.view.search</field>
        <field name="model">candidate.record</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="address" />
                <field name="age" />
                <field name="gender" />
                <field name="marital_status" />
                <field name="education" />
                <field name="skills" />
                <field name="full_time" width="1"/>
                <field name="not_full_time" />
            </search>
        </field>
    </record>

    <record id="candidate_record_view_tree" model="ir.ui.view">
        <field name="name">candidate_record.view.tree</field>
        <field name="model">candidate.record</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="name" />
                <field name="address" />
                <field name="age" />
                <field name="gender" />
                <field name="marital_status" />
                <field name="education" />
                <field name="skills" />
                <field name="full_time" width="1"/>
                <field name="not_full_time" />
            </tree>
        </field>
    </record>

    <record id="candidate_record_view_form" model="ir.ui.view">
        <field name="name">candidate_record.view.form</field>
        <field name="model">candidate.record</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                            <field name="address" />
                            <field name="age" />
                            <field name="gender" />
                            <field name="marital_status" />
                        </group>
                        <group>
                            <field name="education" />
                            <field name="skills" />
                            <field name="full_time" />
                            <field name="not_full_time" />
                        </group>  
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="candidate_record_action" model="ir.actions.act_window">
        <field name="name">Candidate Record</field>
        <field name="res_model">candidate.record</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem
        id="candidate_record_root_menu"
        name="Candidate Record "
        sequence="10"/>
        <menuitem
            id="candidate_record_sub_menu"
            name="Candidate Record"
            action="candidate_record_action"
            parent="candidate_record_root_menu"
            sequence="10"/>

</odoo>
