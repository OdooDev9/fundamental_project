<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="inherit_view_account_payment_form" model="ir.ui.view">
		<field name="name">account.payment.form</field>
		<field name="model">account.payment</field>
		<field name="inherit_id" ref="account.view_account_payment_form" />
		<field name="arch" type="xml">			
			<xpath expr="//button[@name='action_post']" position="after">
				<button name="action_approve_finance_pic" string="Approve By F &amp; A PIC" class="oe_highlight" type="object" groups="product_configure.group_finance_account_pic" data-hotkey="v" attrs="{'invisible': ['|','|',('state', '!=', 'draft'),('unit_or_part','!=','unit'),('payment_type','not in','inbound')]}" />
				<button name="action_approve_finance_head" string="Approve By F &amp; A Head" class="oe_highlight" type="object" groups="product_configure.group_finance_account_head" data-hotkey="v" attrs="{'invisible': ['|','|',('state', '!=', 'approved_finance_pic'),('unit_or_part','!=','unit'),('payment_type','not in','inbound')]}" />
				<button name="action_post" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('unit_or_part','!=','part'),('state', '!=', 'draft'),('payment_type','not in','inbound')]}" data-hotkey="v" />
				<button name="action_post" string="Confirm" type="object" class="oe_highlight" attrs="{'invisible': ['|','|',('state', '!=', 'approved_finance_head'),('unit_or_part','!=','unit'),('payment_type','not in','inbound')]}" data-hotkey="v" />
			</xpath>
			
		</field>
	</record>
	
</odoo>
