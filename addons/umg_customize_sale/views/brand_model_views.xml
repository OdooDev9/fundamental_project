<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <record model="ir.actions.act_window" id="action_brand_models">
        <field name="name">Models</field>
        <field name="res_model">brand.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="view_brand_model_tree" model="ir.ui.view">
        <field name="name">brand.model.tree</field>
        <field name="model">brand.model</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="brand_id"/>
            </tree>
        </field>
    </record>

    <record id="view_brand_model_form" model="ir.ui.view">
        <field name="name">brand.model.form</field>
        <field name="model">brand.model</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="brand_id"/>
                        </group>
                    </group>

                </sheet>
            </form>
        </field>
    </record>

    <menuitem id="menu_hospital_root"
              name="Hospital"
              sequence="10"/>

    <menuitem id="menu_brand_model"
              name="Models"
              parent="stock.menu_stock_config_settings"
              action="action_brand_models"
              sequence="21"/>


</odoo>