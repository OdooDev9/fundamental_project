<odoo>
    <data>

        <record id="action_broker_fees_wizard" model="ir.actions.act_window">
            <field name="name">Broker Fees Wizard</field>
            <field name="res_model">broker.fees.wizard</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
        <record id="wizard_broker_fees_form" model="ir.ui.view">
            <field name="name">Broker Fees Wizard.extended</field>
            <field name="model">broker.fees.wizard</field>
            <field name="arch" type="xml">
                <form string="Split Quotations">
                    <group>
                        <group>
                            <field name="quote_name" readonly="1"/>
                        </group>
                        <group>
                            <field name="partner_id" options="{'no_create': True}" domain="[('broker', '=', True)]" required="1"/>
                            <field name="product_id" options="{'no_create': True}" required="1"/>
                            <field name="hr_br_id" options="{'no_create': True}" />
                            <field name="hr_bu_id" options="{'no_create': True}" />

                        </group>
                        <group>
                            <field name="total_amount" invisible="1"/>

                            <field name="payment_type" readonly="1" invisible="1"/>
                            <field name="fixed_amount" attrs="{'invisible': [('payment_type', '=','percentage')]}" required="1"/>
                            <field name="fixed_percentage"
                                   attrs="{'invisible': [('payment_type', '=', 'fixed_amount')]}"/>
                            <field name="payment_amt" attrs="{'invisible': [('payment_type', '=', 'fixed_amount')]}"/>
                        </group>
                        <group>
                            <field name="phone_no" options="{'no_create': True}"/>
                            <field name="bfoker_type" />
                            <field name="attachment_id" filename="xfile" widget="many2many_binary" />
                        </group>
                    </group>

                    <footer>
                        <button type="object" name="request_brokser_fees" string="Request" class="oe_highlight"/>
                        Or
                        <button string="Cancel" special="cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>

    </data>
</odoo>
