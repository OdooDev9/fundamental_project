<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.module.category" id="module_category_reman">
            <field name="name">Job Order</field>
            <field name="description">Helps you manage your Job Order.</field>
            <field name="sequence">11</field>
        </record>

        <record id="group_reman_user" model="res.groups">
            <field name="name">User</field>
            <!-- <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/> -->
            <field name="category_id" ref="module_category_reman"/>
        </record>

        <record id="group_reman_manager" model="res.groups">
            <field name="name">Production Head</field>
            <field name="category_id" ref="module_category_reman"/>
            <field name="implied_ids" eval="[(4, ref('group_reman_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>
        <record id="group_qa_pic" model="res.groups">
            <field name="name">QA PIC</field>
            <field name="category_id" ref="module_category_reman"/>
            <field name="implied_ids" eval="[(4, ref('group_reman_manager'))]"/>
        </record>


        <record id="manage_bu_job_request" model="ir.rule">
            <field name="name">Manage BU Job Order</field>
            <field name="model_id" ref="job_request.model_job_request"/>
            <field name="domain_force">['|',('business_id', 'in', [g.id for g in
                user.hr_bu_ids]),('business_id','=',False)]
            </field>
        </record>
        <record id="manage_bu_part_order" model="ir.rule">
            <field name="name">Manage BU Part Order</field>
            <field name="model_id" ref="job_request.model_part_order"/>
            <field name="domain_force">['|',('business_id', 'in', [g.id for g in
                user.hr_bu_ids]),('business_id','=',False)]
            </field>
        </record>

        <record id="group_service_head" model="res.groups">
            <field name="name">Service Department Head</field>
        </record>

    </data>
</odoo>