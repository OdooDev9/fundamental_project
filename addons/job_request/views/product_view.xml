<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="replace_product_form_view_inherit" model="ir.ui.view">
            <field name="name">product.template.replace.product.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">

                    <page string="Related Products">
                        <group>
                            <group>
                                <field name="replace_product_ids" widget='many2many_tags' string="Related Product"/>
                            </group>
                        </group>
                    </page>

                </xpath>
            </field>
        </record>
    </data>
</odoo>
