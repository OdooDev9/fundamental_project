    <record model="ir.ui.view" id="req_quotation_view_form_inherited">
        <field name="name">view.order.form.inherit.add.split.button</field>
        <field name="model">request.quotation</field>
        <field name="inherit_id" ref="request_quotation.req_quotation_view_form"/>
        <field name="priority">1000</field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="pr_information"/>
                <field name="lead_time"/>
            </xpath>

            <xpath expr="//header" position="inside">
                <field name="reman" invisible="1"/>

                <!-- Reman Part Sale Quotation Approval -->

                <button type="object" name="action_approve_sale_head" string="Approve By Sale  Head"
                        class="oe_highlight"
                        attrs="{'invisible':['|',('reman','=',False),('state','!=','draft')]}"
                        groups="product_configure.group_sale_head"/>
                <button type="object" name="action_approve_gm_agm" string="Approve By GM/AGM" class="oe_highlight"
                        attrs="{'invisible':['|',('reman','=',False),('state','!=','approved_sale_head')]}"
                        groups="product_configure.group_gm_agm"/>
            </xpath>
            <xpath expr="//button[@name='action_approve']" position="replace">
                <button name="action_approve"
                        attrs="{'invisible':['|','|',('reman','=',True),('state','!=','draft'),('bu_br_user_approve','=',False)]}"
                        type="object" string="Approve By Sale Admin" data-hotkey="w"
                        class='oe_highlight' groups="product_configure.group_sale_admin"/>
                <!-- <button name="action_approve" attrs="{'invisible':['|','|',('unit_or_part','!=','part'),('reman','=',False),('state','!=','draft')]}" type="object" string="Approve By Sale Admin" data-hotkey="w"
                    class='oe_highlight' groups="product_configure.group_sale_admin"/> -->
                <!-- <button name="action_approve"
                        attrs="{'invisible':['|','|','|',('reman','=',True),('discount_view','=',False),('state','!=','draft'),('unit_or_part', '!=', 'part')]}"
                        type="object" string="Approve By Sale Admin" data-hotkey="w"
                        class='oe_highlight' groups="product_configure.group_sale_admin"/> -->
            </xpath>

            <xpath expr="/form/sheet/notebook/page/field[@name='req_quotation_line']/tree/field[@name='name']"
                   position="after">
                <button type="object" name="action_replace_product" class="oe_highlight"
                        icon="fa-solid fa-retweet" attrs="{'invisible':[('state','=','sale')]}"/>
            </xpath>
        </field>
    </record>

</odoo>
