<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="view_job_invoice_form" model="ir.ui.view">
		<field name="name">job.request.invoice.form</field>
		<field name="model">job.request.invoice</field>
		<field name="arch" type="xml">
			<form string="Invoice">
				<group>
					<field name="name" required="1"/>
					<field name="currency_id" />
					<field name="service" widget="monetary"/>
				</group>
				<footer>
					<button string="Create Invoice" name="create_invoice" type="object" class="oe_highlight" />
					or
					<button string="Cancel" class="oe_link" special="cancel"/>
				</footer>
			</form>
		</field>
	</record>
	<record id="action_job_invoice" model="ir.actions.act_window">
		<field name="name">Invoice</field>
		<field name="type">ir.actions.act_window</field>
		<field name="res_model">job.request.invoice</field>
		<field name="view_mode">form</field>
		<field name="target">new</field>
	</record>
</odoo>