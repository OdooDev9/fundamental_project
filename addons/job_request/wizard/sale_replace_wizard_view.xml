<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_replace_product_form" model="ir.ui.view">
        <field name="name">sale.replace.product.form</field>
        <field name="model">sale.replace.product</field>
        <field name="arch" type="xml">
            <form string="Sale Replace Product">
                <group name="line" string="Line">
                    <field name="sale_order_line_id" readonly="1"/>
                    <field name="replace_product_ids" readonly="1" widget="many2many_tags"/>
                </group>
                <notebook>
                    <page string="Replace Products">
                        <group>
                            <group>
                                <field name="product_id" />
                                <field name="desc" required="1"/>
                            </group>
                        </group>
                    </page>
                </notebook>
                <footer>
                    <button string="Replace" name="action_replace_product" type="object"
                            class="oe_highlight"/>
                    or
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="sale_replace_view" model="ir.actions.act_window">
        <field name="name">Sale Replace Product</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">sale.replace.product</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

