<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="choose_delivery_carrier_view_form" model="ir.ui.view">
        <field name="name">choose.delivery.carrier.form</field>
        <field name="model">job.order.delivery</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="currency_id" invisible="1"/>
                        <field name="location_src_id" />
                        <field name="location_dest_id" />
                        <field name="name" required="1" />
                        <field name="service_charge"/>
                    </group>
                </group>
                <footer>
                    <button name="button_confirm" type="object" string="Process" class="btn-primary"/>
                    <button string="Discard" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
