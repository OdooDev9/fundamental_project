<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Advisor Journal Entries[account.move] -->
    <!-- group_account_manager --> 
    <record id="manage_advisor_journal_entries" model="ir.rule">
        <field name="name">Advisor Journal Entries</field>
        <field name="model_id" ref="account.model_account_move"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>
    
    <!-- Advisor Journal Item[account.move.line] -->
    <!-- group_account_manager -->   
    <record id="manage_advisor_journal_items" model="ir.rule">
        <field name="name">Advisor Journal Items</field>
        <field name="model_id" ref="account.model_account_move_line"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>

    <!-- ACCOUNTANT ROLE ACCESS FOR JOURNAL:[account.journal] -->
    <!-- group_account_user -->
    <record id="accountant_account_journal" model="ir.rule">
        <field name="name">Accountant Account Journal</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">[('bu_br_id', '=', user.current_bu_br_id.id)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_user'))]"/>
        <field name="perm_read" eval="False"/>
    </record>
    <!-- group_account_manager -->
    <record id="manager_account_journal" model="ir.rule">
        <field name="name">Manager Account Journal</field>
        <field name="model_id" ref="account.model_account_journal"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('account.group_account_manager'))]"/>
    </record>
</odoo>
