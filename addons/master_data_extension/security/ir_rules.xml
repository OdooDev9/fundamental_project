<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- rules -->
    <record id="business_user_rule_group" model="ir.rule">
        <field name="name">User Access On Business Unit</field>
        <field name="model_id" ref="model_business_unit"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_hr_branch_user')),(4, ref('group_hr_bu_user'))]"/>
    </record>
    
    <record id="business_manager_rule_group" model="ir.rule">
        <field name="name">Manager Access On Business Unit</field>
        <field name="model_id" ref="model_business_unit"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('group_cfd_user'))]"/>
    </record>

    <record id="group_cashier" model="res.groups">
        <field name="name">Cashier</field>
    </record>    

</odoo>
