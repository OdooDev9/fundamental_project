<odoo>
    <record model="ir.module.category" id="module_category_hr_division">
        <field name="name">Division</field>
        <field name="description">Helps you manage your division.</field>
        <field name="sequence">9</field>
    </record>

    <!-- Div user Group -->
    <record id="group_hr_div_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
            ref="master_data_extension.module_category_hr_division"/>
    </record>

    <!-- rules -->
    <!-- Div Manager Group -->
    <record id="group_hr_div_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
            ref="master_data_extension.module_category_hr_division"/>
        <field name="implied_ids"
            eval="[(4, ref('master_data_extension.group_hr_div_user'))]"/>
    </record>
</odoo>