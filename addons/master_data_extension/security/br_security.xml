<odoo>
    <record model="ir.module.category" id="module_category_hr_branch">
        <field name="name">Branch</field>
        <field name="description">Helps you manage your Branchies.</field>
        <field name="sequence">10</field>
    </record>

    <!-- Branch user Group -->
    <record id="group_hr_branch_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id"
            ref="master_data_extension.module_category_hr_branch"/>
    </record>

    <!-- rules -->
    <!-- Branch Manager Group -->
    <record id="group_hr_branch_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id"
            ref="master_data_extension.module_category_hr_branch"/>
        <field name="implied_ids"
            eval="[(4, ref('master_data_extension.group_hr_branch_user'))]"/>
    </record>
    </odoo>