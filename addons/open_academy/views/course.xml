<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="course_view_search" model="ir.ui.view">
        <field name="name">course.view.search</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <search>
                <field name="title" />
                <field name="description" />
            </search>
        </field>
    </record>
    <record id="course_view_tree" model="ir.ui.view">
        <field name="name">course.view.tree</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <tree string="Course List">
                <field name="title" />
                <field name="description" />
            </tree>
        </field>
    </record>
    <record id="course_view_form" model="ir.ui.view">
        <field name="name">course.view.form</field>
        <field name="model">course</field>
        <field name="arch" type="xml">
            <form string="Course Form">
                <sheet>
                    <group>
                        <field name="title" />
                    </group>
                    <notebook>
                        <page string="Description">
                            <field name="description" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <record id="course_action" model="ir.actions.act_window">
        <field name="name">Action Name</field>
        <field name="res_model">course</field>
        <field name="view_mode">tree,form</field>        
    </record>
    <menuitem
        id="open_academy_menu"
        name="Open Academy"
        sequence="10"/>
        <menuitem
            id="course_menu"
            name="Course"
            action="course_action"
            parent="open_academy_menu"
            sequence="10"/>

</odoo>